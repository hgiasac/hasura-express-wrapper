{
  "name": "hasura-node-types",
  "version": "0.1.0",
  "description": "Add Hasura types, event trigger and action wrapper for common web frameworks",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "npm run clean && npm run lint && tsc",
    "test": "jest",
    "clean": "rm -rf lib && rm -rf .nyc_output && rm -rf coverage",
    "lint": "eslint --ext .js,.ts src",
    "example": "ts-node example/index.ts",
    "prepare": "npm run build",
    "prepublishOnly": "npm run lint && npm test",
    "version": "git add -A src",
    "postversion": "git push && git push --tags"
  },
  "author": "Toan Nguyen",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^25.2.1",
    "@types/node": "^13.13.4",
    "@types/supertest": "^2.0.9",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^2.29.0",
    "@typescript-eslint/parser": "^2.29.0",
    "eslint": "^6.8.0",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-import": "^2.20.2",
    "express": "^4.17.1",
    "jest": "^25.5.3",
    "supertest": "^4.0.2",
    "ts-jest": "^25.4.0",
    "ts-node": "^8.9.1",
    "typescript": "^3.8.3",
    "winston": "^3.2.1"
  },
  "dependencies": {
    "@types/express": "latest"
  },
  "peerDependencies": {
    "express": "*"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hgiasac/hasura-node-types.git"
  },
  "keywords": [
    "hasura",
    "typescript",
    "express",
    "action",
    "event"
  ],
  "bugs": {
    "url": "https://github.com/hgiasac/hasura-node-types/issues"
  },
  "homepage": "https://github.com/hgiasac/hasura-node-types#readme",
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "bail": true,
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "testEnvironment": "node",
    "collectCoverage": true
  }
}
